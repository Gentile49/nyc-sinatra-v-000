

<form action="/figures" method="POST">
  <fieldset>
    <div>
      <label for="figure_name">Name</label>
      <input type="text" name="figure[name]" id="figure_name">
    </div>
    <div>
      <% Figure.all.each do |figure| %>
        <label for="landmark_name"><%=figure.landmark.name%></label>
        <input type="text" name="figure[landmark_ids][]" value="<%=figure.landmark.id%>" id="landmark_name">
      <%end%>
    </div>
    <div>
      <% Figure.all.each do |figure| %>
        <label for="title_name"><%=figure.title.name%></label>
        <input type="text" name="figure[title_ids][]" value="<%=figure.title.id%>" id="title_name">
      <%end%>
    </div>
    <div>
      <label for="new_title">New Title</label>
      <input type="text" name="title[name]" id="new_title">
    </div>
    <div>
      <label for="new_landmark">New Landmark</label>
      <input type="text" name="landmark[name]" id="new_landmark">
    </div>

  </fieldset>

</form>
